*,
*:before,
*:after
  box-sizing: inherit
  position: relative

html
  box-sizing: border-box

body
  background-color: #2f363b
  color: white
  font-family: $font-primary
  font-smoothing: always
  font-weight: 400
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

html,
body
  height: 100%

h3
  font-size(60)
  font-weight: 700
  letter-spacing: 0.30px

p
  font-size(16)
  line-height: 1.5
  @media (min-width: 64.000em)
    font-size(18)
    line-height: 1.5

.clearfix
  *zoom: 1
  &:before,
  &:after
    content: ''
    display: table
  &:after
    clear: both

.pane
  padding: 6.250em 1.250em
  @media (min-width: 64.000em)
    float: left
    height: 100%
    height: 100vh
    position: relative
    text-align: center
    &:hover .image
      filter: grayscale(0)
      opacity: .95

.image
  background-size: cover
  bottom: 0
  filter: grayscale(60%)
  left: 0
  opacity: 0.3
  position: absolute
  right: 0
  top: 0
  transition: opacity 0.75s, transform 0.75s

.column
  @media (min-width: 64.000em)
    height: 100%
    width: 50%

.left
  background-image: url('../images/ocean.jpg')
  @media (min-width: 64.000em)
    left: 0
  @media (-webkit-min-device-pixel-ratio: 1.5), (min-resolution: 144dpi)
    background-image: url('../images/ocean@2x.jpg')

.right
  background-image: url('../images/cycling-bike.jpg')
  @media (min-width: 64.000em)
    left: 0
  @media (-webkit-min-device-pixel-ratio: 1.5), (min-resolution: 144dpi)
    background-image: url('../images/cycling-bike@2x.jpg')

@keyframes fadeIn
  0%
    opacity: 0
  100%
    opacity: 1

.content
  margin: 0 auto
  text-align: center
  @media (min-width: 64.000em)
    animation-name: fadeIn
    animation-duration: 1s
    animation-fill-mode: both
    left: 50%
    position: absolute
    top: 50%
    transition: transform 0.6s, top 0.6s
    transform: translateY(-50%) translateX(-50%)
    width: 70%

.copy
  margin: 1.250em auto
  max-width: 36.250em
  padding-top: 1em

.btn
  background: $color-secondary
  color: #fff
  cursor: pointer
  display: inline-block
  font-weight: 700
  letter-spacing: 1px
  margin: 15px 0
  outline: none
  overflow: hidden
  padding: 20px 120px 20px 30px
  text-decoration: none
  text-transform: uppercase
  transition: all 0.3s
  &:hover
    background: darken(#c62228, 5)
  &:active
    background: darken(#c62228, 7)
    top: 2px
  &:before
    content: "\f054"
    font-size: 140%
    font: normal normal normal 16px/1 FontAwesome
    height: 100%
    line-height: 3.7
    position: absolute
    right: 0
    top: 0
    width: 40px
    z-index: 2
  &:after
    background: rgba(255,255,255,0.2)
    content: ''
    height: 200%
    margin: -5px 0 0 -5px
    position: absolute
    right: 0
    top: 0
    transform-origin: 0 0
    transform: rotate(-20deg)
    transition: all 0.3s
    width: 20%
    z-index: 1
  &:hover:after
    width: 25%
