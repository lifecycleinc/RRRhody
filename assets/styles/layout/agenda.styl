.agenda
  margin-top: $spacing-xlarge * 4
  max-width: 1100px
  padding: 0 $spacing-medium

  .grid
    margin: $spacing-xlarge * 2 0

  .grid-1-2
    &:nth-child(odd)
      padding-right: $spacing-xlarge

    &:nth-child(even)
      padding-left: $spacing-xlarge

    &:nth-child(3)
      clear: left

  .slat
    margin-bottom: $spacing-xlarge * 3

  .slat-img
    height: 165px
    width: 165px
