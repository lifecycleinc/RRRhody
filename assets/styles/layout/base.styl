*,
*:before,
*:after
  box-sizing: inherit
  position: relative

html,
body
  height: 100%
  width: 100%

html
  box-sizing: border-box

body
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  background: #f0f0f0
  color: $color-text
  font-family: $font-secondary
  font-smoothing: always
  font-weight: $font-regular
  text-rendering: optimizeLegibility

button
  background: none
  border: 0

.section-content
  left: 50%
  position: absolute
  top: 50%
  transform: translate(-50%, -50%) scale(1.01)
  width: 100%
  z-index: $level-1

.icon
  overflow: hidden
  text-indent: 100%
  white-space: nowrap

.img-clip
  border-radius: 50%
  height: 90px
  overflow: hidden
  width: 90px

.main-container
  background: white
  margin: 0 auto
  width: 100%

.intro
  padding: 0 $spacing-medium
  @media(max-width: $screen-medium)
    .grid-1-2
      float: none
      height: 100%
      margin: 0 auto
      width: 90%
