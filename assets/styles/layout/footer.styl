$footer-height = 570px

.footer
  background-attachment: scroll
  background-color: $color-secondary
  background-image: url(../images/cyclists-racing-down-road-with-cars.jpg)
  background-position: center center
  background-repeat: no-repeat
  background-size: cover
  color: white
  height: $footer-height
  padding: $spacing-large * 3 0 $spacing-large
  clearfix()

  &:before
    background-image: url('../images/texture-footer.png')
    background-position: center bottom
    background-repeat: repeat-x
    background-size: 2000px 100px
    content: ''
    height: 140px
    left: 0
    position: absolute
    top: -45px
    width: 100%
    z-index: $level-2

  .section-content
    margin-top: -20px

  .logo-rrrody
    transform: scale(.70)

  .title
    font-weight: $font-light
    margin-bottom: $spacing-large * 2

  .button
    margin-right: $spacing-large
    @media(max-width: $screen-medium)
      margin-right: 0
    &:last-child
      margin-right: 0
      margin-top: 10px

.secondary-footer
  bottom: $spacing-large
  left: $spacing-large
  position: absolute
  right: $spacing-large

  a
    color: #fff

  .pull-right,
  .pull-left
    @media(max-width: $screen-medium)
      float: none
      margin-top: 10px
      text-align: center

  .follow
    color: $color-primary
    display: inline
