.button
  background: $color-primary
  border-radius: 3px
  color: white
  display: inline-block
  font-size: 16px
  font-weight: $font-bold
  letter-spacing: 2px
  line-height: 1
  overflow: hidden
  padding: 20px 42px
  text-align: center
  text-decoration: none
  text-transform: uppercase

  span
    z-index: $level-2

  &:after
    background: lighten($color-primary, 10%)
    content: ''
    height: 200%
    margin: -5px 0 0 -5px
    position: absolute
    right: 0
    top: 0
    transform-origin: 0 0
    transform: rotate(-20deg)
    transition: all .3s cubic-bezier(.2, 1, .3, 1)
    width: 50%
    z-index: $level-1

  &:hover:after
    width: 0
