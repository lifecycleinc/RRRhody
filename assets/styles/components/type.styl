h1, h2, h3
  font-family: $font-primary
  font-weight: $font-thin

.subheading
  color: $color-primary
  display: block
  font-family: $font-secondary
  font-size: 14px
  font-weight: $font-bold
  letter-spacing: 2px
  margin: 0
  padding: 0
  text-align: center
  text-transform: uppercase

.title
  display: block
  font-size: 50px
  line-height: 50px
  margin: 0 0 20px
  padding: 0
  text-align: center
  word-wrap: normal

.text-center
  text-align: center

p
  font-size: 18px
  line-height: 26px
