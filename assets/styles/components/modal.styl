.modal
  max-height: 608px
  max-width: 1080px
  position: absolute
  top: 0
  width: 100%
  z-index: $level-3

.modal-overlay
  background: $color-secondary
  background: rgba($color-secondary, 0.9)
  bottom: 0
  left: 0
  position: fixed
  right: 0
  top: 0
  z-index: $level-2

.video-container
  left: 50%
  left: calc(50% + 30px)
  position: absolute
  top: 35px
  transform: translateX(-50%)
  z-index: $level-3

.close-modal
  background: $color-secondary
  border-radius: 50%
  display: block
  height: 50px
  position: absolute
  right: -60px
  text-indent: -9999px
  top: -20px
  width: 50px
  z-index: $level-3

  &:before,
  &:after
    background: white
    content: ''
    height: 2px
    left: 22%
    position: absolute
    top: 48%
    transform: rotate(-45deg)
    transition: all 0.3s ease-out
    width: 55%

  &:after
    transform: rotate(45deg)
    transition: all 0.3s ease-out

  &:hover
    &:before,
    &:after
      transform: rotate(180deg)
